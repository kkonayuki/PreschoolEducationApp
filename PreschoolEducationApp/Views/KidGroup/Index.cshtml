@model IEnumerable<KidGroup> 

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Информационная система для дошкольного образования</h1>
        <p class="lead text-muted">Прототип веб-приложении разработанной на языке C# (ASP.NET Core)
               С подключением базы данных (MS SQl Server)</p>
        <p>
            <a type="btn btn-success" button asp-controller="KidGroup" asp-action="Create"
                  class="btn btn-primary my-2">Добавить группу</a>
          
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          @foreach (var item in Model)
            {
                
                <div class="col">
          <div class="card shadow-sm">
            <img class ="card-img-top" src ="@item.Image" width="100" height="225" alt="Card image cap">

            <div class="card-body">
              <p class="card-text">@item.Name</p>
             
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a type="btn btn-success" button asp-controller="KidGroup" asp-action="Detail" asp-route-id="@item.Id"
                  class="btn btn-sm btn-outline-secondary">Посмотреть</a>
                  <a type="button" button asp-controller="KidGroup" asp-action="Edit" asp-route-id="@item.Id"
                  class="btn btn-sm btn-outline-primary">Редактировать</a>
                  <a type="btn btn-success" button asp-controller="KidGroup" asp-action="Delete" asp-route-id="@item.Id"
                 class="btn btn-sm btn-outline-danger">Удалить</a>
                </div>
                
                <small class="text-muted">Кол-во детей: @item.CountOfKids()</small>
              </div>
            </div> 
          </div>
        </div>
            }
            </div>
          </div>
        </div>